{{#each ideas}}
<div class="card card-body mb-3">
  <h5>{{title}}</h5>
  <p>{{description}}</p>
  <a href="/ideas/edit/{{_id}}" class="btn btn-dark mb-2 edit-btn">Edit</a>
  <form action="/ideas/{{_id}}?_method=DELETE" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" class="btn btn-danger edit-btn" value="Delete">
  </form>
</div>
{{else}}
<p>No video ideas</p>
{{/each}}