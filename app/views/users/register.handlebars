<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class="logo" src="/img/logo.png">
      <h3 class="text-center">
        Acount Registration
      </h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input value="{{name}}" name="name" type="name" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input value="{{email}}" name="email" type="email" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input value="{{password}}" name="password" type="password" class="form-control" required>
        </div>
         <div class="form-group">
          <label for="password">Confirm Password</label>
          <input value="{{confpassword}}" name="confpassword" type="password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>